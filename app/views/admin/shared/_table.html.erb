<table class="table table-hover">
  <thead>
    <tr>
      <% table.columns.each do |column| %>
        <%= column.render_header(self) %>
      <% end %>
  </thead>
  <tbody>
    <% records.each do |record| %>
      <tr>
        <% table.columns.each do |column| %>
          <%= column.render_column(self, record) %>
        <% end %>
      </tr>
    <% end %>
  <tbody>
</table>

<%= paginate records if records.respond_to? :total_pages %>
