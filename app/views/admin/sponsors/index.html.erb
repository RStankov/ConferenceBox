<% title 'Sponsors', @sponsors.size %>

<% actions do %>
  <%= action_link 'New sponsor', new_admin_sponsor_path %>
<% end %>

<%= table_for @sponsors do |table| %>
  <% table.column :name do |sponsor| %>
    <%= link_to sponsor.name, admin_sponsor_path(sponsor) %>
  <% end %>
  <% table.column :website_url do |sponsor| %>
    <%= link_to sponsor.website_url, sponsor.website_url, target: :blank %>
  <% end %>
  <% table.actions do |sponsor| %>
    <%= edit_action edit_admin_sponsor_path(sponsor) %>
    <%= delete_action admin_sponsor_path(sponsor) %>
  <% end %>
<% end %>
