<% title 'Speakers', @speakers.size %>

<% actions do %>
  <%= action_link 'New speaker', new_admin_speaker_path %>
<% end %>

<%= table_for @speakers do |table| %>
  <% table.column :name do |speaker| %>
    <%= link_to speaker.name, admin_speaker_path(speaker) %>
  <% end %>
  <% table.boolean :organizer %>
  <% table.number :sessions_count %>
  <% table.column :tshirt_size, class: 'text-right', header_class: 'text-right' %>
  <% table.actions do |speaker| %>
    <%= edit_action edit_admin_speaker_path(speaker) %>
    <%= delete_action admin_speaker_path(speaker) %>
  <% end %>
<% end %>
